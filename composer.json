{
    "name": "krnos/fire",
    "description": "Eloquent model history tracking and fire events to laravel",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "illuminate/support": "^7.0|^8.0|^9.0",
        "illuminate/database": "^7.0|^8.0|^9.0",
        "illuminate/log": "^7.0|^8.0|^9.0",
        "illuminate/events": "^7.0|^9.0",
        "illuminate/config": "^7.0|^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.20",
        "mockery/mockery": "^1.4",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Krnos\\Fire\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:dist": "phpunit --coverage-clover clover.xml",
        "test:coverage": "php-coveralls -v -x clover.xml -o ./logs --exclude-no-stmt"
    },
    "autoload-dev": {
        "psr-4": {
            "Krnos\\Fire\\Tests\\": "tests/"
        }  
    },
    "extra": {
        "laravel": {
            "providers": [
                "Krnos\\Fire\\FireServiceProvider"
            ]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Sotelo",
            "email": "isotelo@controlla.com.mx"
        }
    ]
}
