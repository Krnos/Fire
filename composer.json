{
    "name": "krnos/fire",
    "description": "Eloquent model history tracking and fire events to laravel",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "illuminate/support": "^5.3",
        "illuminate/database": "^5.3",
        "illuminate/log": "^5.3",
        "illuminate/events": "^5.3",
        "illuminate/config": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.4",
        "orchestra/testbench": "~3.7",
        "mockery/mockery": "^1.2",
        "php-coveralls/php-coveralls": "~2.1"
    },
    "autoload": {
        "psr-4": {
            "Krnos\\Fire\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:dist": "phpunit --coverage-clover clover.xml",
        "test:coverage": "php-coveralls -v -x clover.xml -o ./logs --exclude-no-stmt"
    },
    "autoload-dev": {
        "psr-4": {
            "Krnos\\Fire\\Tests\\": "tests/"
        }  
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Sotelo",
            "email": "isotelo@controlla.com.mx"
        }
    ]
}
